<div class = "container">
    <div class="outer">
        <div class="inner">
            <div class="centered" >
                <h1>MAILBOX</h1>
                <h3>You have a message</h3>
                
             
                       
                
<style>
.demo-card-wide.mdl-card {
  width: 512px;
}
.demo-card-wide > .mdl-card__title {
  color: #fff;
  height: 176px;
  background: url('../assets/welcome_card.jpg') center / cover;
}
.demo-card-wide > .mdl-card__menu {
  color: #fff;
}
</style>
<% @every_post.each do |p| %>

<div class="demo-card-wide mdl-card mdl-shadow--2dp">
  <div class="mdl-card__title">
    <h2 class="mdl-card__title-text">                      <%= p.title %>
</h2>
  </div>
  <div style="word-break:break-all;" class="mdl-card__supporting-text">
 <%= p.content %>
  </div>
  <div class="mdl-card__actions mdl-card--border">
    <a class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect">
                        <%= p.address %>
    </a>
  </div>
  <div class="mdl-card__menu">
    <button class="mdl-button mdl-button--icon mdl-js-button mdl-js-ripple-effect">
      <i class="material-icons">share</i>
    </button>
  </div>
</div>
<br>
                           <% end %>
     
                    <br>
                    <br>
                    <a href = "/"><button style="margin-bottom:20px" type="button" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent">
                    GO BACK
                    </button></a>
            </div>
        </div>
    </div>
</div>